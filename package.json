{
  "name": "opencode-brain",
  "version": "1.1.0",
  "description": "Persistent memory using Memvid, compatible with Claude Code (claude-brain)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    ".opencode",
    "opencodeBrain-banner.png"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "opencode",
    "opencode-plugin",
    "memory",
    "persistent-memory",
    "memvid",
    "claude-brain",
    "ai-memory",
    "context-persistence",
    "ai-assistant",
    "code-memory",
    "session-persistence"
  ],
  "author": "deiviuds",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/deiviuds/opencode-brain"
  },
  "bugs": {
    "url": "https://github.com/deiviuds/opencode-brain/issues"
  },
  "homepage": "https://github.com/deiviuds/opencode-brain#readme",
  "dependencies": {
    "@memvid/sdk": "^2.0.149",
    "proper-lockfile": "^4.1.2"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "latest",
    "@opencode-ai/sdk": "latest",
    "@types/node": "^22.0.0",
    "@types/proper-lockfile": "^4.1.4",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": ">=0.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
